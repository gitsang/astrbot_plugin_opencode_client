{
  "server_url": {
    "description": "OpenCode Server URL",
    "type": "string",
    "hint": "OpenCode 服务器地址，例如 http://localhost:4096",
    "default": "http://localhost:4096"
  },
  "username": {
    "description": "Basic Auth 用户名",
    "type": "string",
    "hint": "HTTP 基本认证用户名，默认为 opencode",
    "default": "opencode"
  },
  "password": {
    "description": "Basic Auth 密码",
    "type": "string",
    "hint": "HTTP 基本认证密码，对应 OPENCODE_SERVER_PASSWORD 环境变量"
  },
  "timeout": {
    "description": "请求超时时间(秒)",
    "type": "int",
    "hint": "HTTP 请求超时时间",
    "default": 300
  }
}
